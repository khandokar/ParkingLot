
<div class="container-fluid px-4">
  <div class="row gx-2" style="height:700px">
    <div class="col-5">
      <div class="h-100 p-3 border bg-light">
        <div id="inOutView">
            @await Component.InvokeAsync("InOut")
        </div>
        <div class="col-sm-7 mx-auto p-3" style="height:300px">
          <div class="row">
            <div class="col-sm-6 d-grid gap-2">
              <input id="btnIn" type="button" value="In" class="btn btn-secondary">
            </div>
            <div class="col-sm-6 d-grid gap-2">
              <input id="btnOut" type="button" value="Out" class="btn btn-secondary">
            </div>
          </div>
        </div>
        <div class="col-md-3 d-grid mx-auto">
          <input type="button" class="btn btn-secondary" value="Stats" id="btnModal">
        </div>
      </div>
    </div>
    <div class="col">
      <div class="h-100 p-3 border bg-light" id="splotList">
           @await Component.InvokeAsync("List")
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="statsModal" tabindex="-1" aria-labelledby="statsModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Summary Report</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="modalBody">
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>


